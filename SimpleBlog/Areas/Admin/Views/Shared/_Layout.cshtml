@using System.Web.Optimization
@{
    Layout = null;
}

@helper SelectedTabClass(string tabName) { 
    if(tabName == ViewBag.SelectedTab)
    {
        @: active
    }
    
}
<!--below is a page layout to be used by a view that references this file-->
<!DOCTYPE html>

<html>
<head>
    <title>Simple Blog Admin</title>
    @Styles.Render("~/admin/styles")

</head>
<body>
 
    <div class="container">
        <ul class=" nav nav-pills">
            <li class="@SelectedTabClass("posts")">
                @Html.ActionLink("Posts", "Index", "Posts", new { area = "admin" }, new{ })
            </li>
            <li class="@SelectedTabClass("users")">
                @Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })
            </li>
            <li class="pull-right">
                @Html.RouteLink("Back to Website", "Home")
            </li>
        </ul>
        <!--inserts the view here-->
        @RenderBody()
    </div>
    
    
    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken(); <!--injects input tag with __RequestVerificationToken as value-->
    </form>

</body>



</html>
